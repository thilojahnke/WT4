<mvc:View xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m"
	controllerName="WT4.controller.address" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<Page title="{i18n>pageTitle}" id="page1">
			<Panel headerText="{i18n>panelText}">
				<VBox class="sapUiSmallMargin">
					<f:Form id="V_address_form" editable="true">
						<f:title>
							<core:Title text="{i18n>detailPanel}" />
						</f:title>
						<f:layout>
							<f:ResponsiveGridLayout labelSpanXL="3"
								labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false"
								emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
								columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false" />
						</f:layout>
						<f:formContainers>
							<f:FormContainer>
							<f:formElements>
							    
							    <f:FormElement>
							      <f:fields>
							       <Input value="{path :'/nummer', type: 'sap.ui.model.type.Integer' ,constraints : {minimum : 0, maximum: 4 }}"
							                            width="200px" submit="onAdressEntry" id="inputIndex"/>
							       <Button text="U" press="onButtonPressUp" width="40px"/>  
							       <Button text="D" press ="onButtonPressDown" width="40px"/>   
							      </f:fields>
							    </f:FormElement>
								<f:FormElement label="Name1">
									<f:fields>
										<Text text="{/name1}"  id="name1" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Name2"> 
									<f:fields>
										<Text text="{/name2}" id="name2" />
										<Text text="{parts: [{path: '/name2' },{path: '/name1' }],formatter:'.joiner' }" />
									</f:fields>
								</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
						
					</f:Form>
				</VBox>
			</Panel>
		</Page>
	</App>
</mvc:View>