<mvc:View xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m"
	controllerName="WT4.controller.address" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<Page title="{i18n>pageTitle}" id="page1">
			<Panel headerText="{i18n>panelText}">

				<f:Form editable="false">
					<f:title>
						<core:Title text="{i18n>detailPanel}" />
					</f:title>
					<f:layout>
						<f:GridLayout singleColumn="false" />
					</f:layout>
					<f:formContainers>
						<f:FormContainer>

							<f:title>
								<core:Title text="Container Label" />
							</f:title>
							<f:formElements>
								<f:FormElement label="Kundennummer">
									<f:fields>
										<Text text="{/kunnr}" id="kunnr" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Name1">
									<f:fields>
										<Text text="{/name1}" id="name1" />
									</f:fields>
								</f:FormElement>
								<f:FormElement label="Name2">

									<f:fields>
										<Text text="{/name2}" id="name2" />
									</f:fields>
								</f:FormElement>


							</f:formElements>
						</f:FormContainer>
						<f:FormContainer>

							<f:title>
								<core:Title text="Input Label" />
							</f:title>
							<f:formElements>
								<f:FormElement label="Eingabe">
									<f:fields>
									<VBox>
										<Input	value="{path :'/meta/nummer', type: 'sap.ui.model.type.Integer' ,constraints : {minimum : 0, maximum: 4 }}"
											width="200px" submit="onAdressEntry" id="inputIndex" />
											
									    <Input value="{/kunnr}" width="200px" />
									    </VBox>
										<VBox>
											<Button text="U" press="onButtonPressUp" width="40px" />
											<Button text="D" press="onButtonPressDown" width="40px" />
										</VBox>
										<Button text="LIST" press="onButtonList" width="100%" />
									</f:fields>

								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
						<f:FormContainer>

							<f:title>
								<core:Title text="Description Label" />
							</f:title>
							<f:formElements>
								<f:FormElement label="Description">
									<f:fields>
										<Text
											text="{parts: [{path: '/name2' },{path: '/name1' }],formatter:'.joiner' }" />
									</f:fields>
								</f:FormElement>
							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
			</Panel>
		</Page>
	</App>
</mvc:View>