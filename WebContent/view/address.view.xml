<mvc:View xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m"
	controllerName="WT4.controller.address" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<Page title="{i18n>pageTitle}" id="page1">
			<Panel headerText="{i18n>panelText}">
				
					<l:Grid defaultSpan="XL3 L3 M6 S12">
					<l:content>
					
					
					<VBox>
					<Label text="Kundennummer"/>
					<Label text="Name1:"/>
					<Label text="Name2"/>
					</VBox>
					<VBox>
					<Text text="{/kunnr}"  id="kunnr" />
					<Text text="{/name1}"  id="name1" />
					<Text text="{/name2}"  id="name2" />
					</VBox>
					
					<HBox>
					 <Button text="U" press="onButtonPressUp" width="40px"/>  
					 <Button text="D" press ="onButtonPressDown" width="40px"/>
					 </HBox>
					 <Input value="{path :'/nummer', type: 'sap.ui.model.type.Integer' ,constraints : {minimum : 0, maximum: 4 }}"
							                            width="200px" submit="onAdressEntry" id="inputIndex"/>
					 <Text text="{parts: [{path: '/name2' },{path: '/name1' }],formatter:'.joiner' }" >
					  <layoutData>
					 	<l:GridData span="L3 M3 S8"
						linebreakL="true"
						linebreakM="true"
						linebreakS="true" />
					 </layoutData>
					 </Text>
							                            
					</l:content>
					
					</l:Grid>
				    	
			</Panel>
		</Page>
	</App>
</mvc:View>